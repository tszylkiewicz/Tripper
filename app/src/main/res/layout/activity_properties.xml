<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/properties_bg"
    android:orientation="vertical"
    android:stretchColumns="1">

    <TableRow
        android:padding="15dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/table_row_bg">

        <TextView
            android:layout_height="wrap_content"
            android:layout_span="2"
            android:gravity="center_horizontal"
            android:text="@string/properties_title"
            android:textColor="#FFF"
            android:textSize="25sp"
            android:textStyle="bold" />
    </TableRow>

    <TableRow android:layout_marginBottom="20dp">

        <TextView
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginLeft="10dp"
            android:text="@string/properties_days"
            android:textColor="#fff"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/days"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:inputType="number"
            android:background="#fff"
            android:hint="@string/properties_days"
            android:padding="5dp"
            android:textColor="#000" />
    </TableRow>

    <TableRow android:layout_marginBottom="20dp">

        <TextView
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginLeft="10dp"
            android:text="@string/properties_type"
            android:textColor="#fff"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/type"
            android:layout_width="match_parent"
            android:background="@android:drawable/btn_dropdown"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:hint="@string/properties_type"
            android:padding="5dp"
            android:textColor="#000"
            android:spinnerMode="dropdown"/>
    </TableRow>
</TableLayout>